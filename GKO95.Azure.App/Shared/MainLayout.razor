@inherits LayoutComponentBase
@inject IConfiguration Configuration

<PageTitle>@Configuration["GitHub:User"]</PageTitle>

<div class="page">
	<header>
		<nav>
			<div class="navbar-button-group">
				<a class="navbar-button" style="@IconPath("icon-home.png");" href="" />
				<a class="navbar-button" style="@IconPath("icon-menu.png");" />
			</div>
			<div class="navbar-button-group">
				<a class="navbar-button" style="@IconPath("icon-theme.png");" />
				<a class="navbar-button" style="@IconPath("icon-language.png");" />
			</div>
		</nav>
	</header>
	
    <main>
        @Body
    </main>

	<footer>
		<div id="footer-copyright">
			<span>© Copyright 2021-2023. All Rights Reserved.</span>
		</div>
	</footer>
</div>

@code {
	private string IconPath(string image) => $"background-image: url('/images/icons/{image}')";
}
